server {
    listen ${PORT};
    listen [::]:${PORT};
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # Gzip compression for better performance
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Proxy API calls to archon-server
    # IMPORTANT: Keep /api prefix - archon-server expects it
    location /api/ {
        # Do NOT rewrite - pass the full /api/* path to archon-server
        proxy_pass ${ARCHON_SERVER_URL}/api/;
        
        # CRITICAL: Enable SNI for SSL handshake to work with Railway
        proxy_ssl_server_name on;
        proxy_ssl_name ${ARCHON_SERVER_HOST};
        
        # HTTP version and upgrade headers
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        
        # Host header must be the archon-server hostname for SSL to work
        proxy_set_header Host ${ARCHON_SERVER_HOST};
        
        # Standard proxy headers
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Socket.IO specific endpoint
    location /socket.io/ {
        proxy_pass ${ARCHON_SERVER_URL}/socket.io/;
        
        # CRITICAL: Enable SNI for SSL handshake to work with Railway
        proxy_ssl_server_name on;
        proxy_ssl_name ${ARCHON_SERVER_HOST};
        
        # WebSocket specific settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Host header must be the archon-server hostname for SSL to work
        proxy_set_header Host ${ARCHON_SERVER_HOST};
        
        # Standard proxy headers
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # WebSocket timeouts
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }

    # Serve static files with proper caching
    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Handle client-side routing - serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;
        
        # Don't cache index.html to ensure users get latest version
        location = /index.html {
            add_header Cache-Control "no-cache, no-store, must-revalidate";
            add_header Pragma "no-cache";
            add_header Expires "0";
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "OK";
        add_header Content-Type text/plain;
    }
}